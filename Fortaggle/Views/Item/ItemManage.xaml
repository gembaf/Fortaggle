<UserControl x:Class="Fortaggle.Views.Item.ItemManage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:behavior="clr-namespace:Fortaggle.Views.Behaviors"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">

    <i:Interaction.Behaviors>
        <behavior:DialogBehavior Content="{Binding ItemDialogVM}" />
    </i:Interaction.Behaviors>

    <Border Style="{StaticResource BlackBorder}">
        <DockPanel>
            <UniformGrid Columns="4"
                         Height="40"
                         DockPanel.Dock="Top">
                <Button Content="アイテム追加"
                        Command="{Binding NewItemDialogCommand}"/>
            </UniformGrid>

            <ListBox ItemsSource="{Binding ItemVMList}"
                     Style="{StaticResource WhiteListBox}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource UnderLineBorder}"
                                MinWidth="350">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ExecuteFileImage}"
                                       Height="42" Width="42"
                                       Grid.Column="0"/>
                                <TextBlock Text="{Binding Name}"
                                           Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Border>
</UserControl>
